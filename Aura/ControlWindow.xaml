<Window x:Class="Aura.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aura"
        mc:Ignorable="d"
        Title="Aura Controls" Height="400" Width="300"
        WindowStyle="ToolWindow" Topmost="True" ShowInTaskbar="False">

    <StackPanel Margin="15">
        <CheckBox Content="Enable Aura Dimmer" FontWeight="Bold" IsChecked="{Binding IsOverlayVisible, Mode=TwoWay}"/>
        <Separator Margin="0,15,0,10"/>

        <TextBlock Text="Opacity" />
        <Slider Minimum="0.1" Maximum="1.0" Value="{Binding DimOpacity, Mode=TwoWay}" />

        <TextBlock Text="Red" Margin="0,10,0,0" />
        <Slider Minimum="0" Maximum="255" IsSnapToTickEnabled="True" TickFrequency="1" 
                Value="{Binding DimColorR, Mode=TwoWay}" />

        <TextBlock Text="Green" Margin="0,10,0,0" />
        <Slider Minimum="0" Maximum="255" IsSnapToTickEnabled="True" TickFrequency="1"
                Value="{Binding DimColorG, Mode=TwoWay}" />

        <TextBlock Text="Blue" Margin="0,10,0,0" />
        <Slider Minimum="0" Maximum="255" IsSnapToTickEnabled="True" TickFrequency="1"
                Value="{Binding DimColorB, Mode=TwoWay}" />

        <Separator Margin="0,15,0,10"/>
        <Button Content="Exit Application" Click="ExitButton_Click"/>

    </StackPanel>
</Window>